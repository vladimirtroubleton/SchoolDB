@model SchoolDataBaseApp.Models.SearchModel

@{
    ViewData["Title"] = "SearchStaff";
}

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="SearchStaff">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Найти" class="btn btn-outline-success" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-outline-success">Назад</a>
        </div>
    </div>
