@model StaffModel

@{
    ViewData["Title"] = "StaffEdit";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="StaffRecordEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display:none">
                    <label asp-for="StaffId" class="control-label"></label>
                    <p class="form-control">@Model.StaffId</p>
                    <input asp-for="StaffId" class="form-control" type="hidden" />
                    <span asp-validation-for="StaffId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <select id="Gender" name="Gender" class="form-control">

                        <option>Мужской</option>
                        <option>Женский</option>

                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExperienceWork" class="control-label"></label>
                    <input asp-for="ExperienceWork" class="form-control" />
                    <span asp-validation-for="ExperienceWork" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DepartamentId" class="control-label"></label>
                    <select id="DepartamentId" name="DepartamentId" class="form-control">
                        @foreach (var item in ViewBag.Departaments)
                        {
                            <option value=@item.DepartamentId>@item.DepartamentName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="SpecializationId" class="control-label"></label>
                    <select id="SpecializationId" name="SpecializationId" class="form-control">
                        @foreach (var item in ViewBag.Specialization)
                        {
                            <option value=@item.SpecializationId>@item.SpecializationName</option>
                        }
                    </select>

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
